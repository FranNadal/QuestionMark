Options -Indexes

<FilesMatch ".*\.(log|ini|htaccess)$">
    deny from all
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /QuestionMark/

    # No reescribir peticiones a la carpeta de imágenes de página
    RewriteCond %{REQUEST_URI} ^/QuestionMark/view/img_page/ [NC]
    RewriteRule .* - [L]

    # No reescribir peticiones a la carpeta de imágenes de perfil
    RewriteCond %{REQUEST_URI} ^/QuestionMark/img/profile/ [NC]
    RewriteRule .* - [L]

    # Permitir acceso directo a la carpeta view/styles
    RewriteCond %{REQUEST_URI} ^/QuestionMark/view/styles/ [NC]
    RewriteRule .* - [L]

    RewriteRule ^(public)($|/) - [L,NC]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/(.*)/(.*)$ index.php?controller=$1&method=$2&$3 [L,QSA]
    RewriteRule ^(.*)/(.*)$ index.php?controller=$1&method=$2 [L,QSA]
    RewriteRule ^(.*)$ index.php?controller=$1 [L,QSA]
</IfModule>

